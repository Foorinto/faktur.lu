# ============================================
# Configuration Production - faktur.lu
# ============================================
# IMPORTANT: Ne jamais commiter ce fichier avec de vraies valeurs !
# Copier ce fichier en .env sur le serveur de production et
# remplir les valeurs réelles.
# ============================================

APP_NAME="faktur.lu"
APP_ENV=production
APP_KEY=base64:XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
APP_DEBUG=false
APP_URL=https://faktur.lu

APP_LOCALE=fr
APP_FALLBACK_LOCALE=fr
APP_FAKER_LOCALE=fr_FR

APP_MAINTENANCE_DRIVER=file

# Bcrypt rounds (12 est un bon compromis sécurité/performance)
BCRYPT_ROUNDS=12

# ============================================
# Logging - Production
# ============================================
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# ============================================
# Base de données
# ============================================
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=fakturlu_prod
DB_USERNAME=fakturlu_user
DB_PASSWORD=STRONG_DATABASE_PASSWORD_HERE

# ============================================
# Sessions - Configuration sécurisée
# ============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=faktur.lu
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# ============================================
# Cache et Queue
# ============================================
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
CACHE_STORE=database

# ============================================
# Email - Brevo (SMTP)
# ============================================
MAIL_MAILER=smtp
MAIL_HOST=smtp-relay.brevo.com
MAIL_PORT=587
MAIL_USERNAME=votre-email-brevo@example.com
MAIL_PASSWORD=VOTRE_CLE_SMTP_BREVO
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="info@faktur.lu"
MAIL_FROM_NAME="faktur.lu"

# ============================================
# Vite
# ============================================
VITE_APP_NAME="${APP_NAME}"

# ============================================
# Checklist de déploiement
# ============================================
# [ ] APP_DEBUG=false
# [ ] APP_ENV=production
# [ ] APP_KEY généré (php artisan key:generate)
# [ ] LOG_LEVEL=warning
# [ ] SESSION_ENCRYPT=true
# [ ] SESSION_SECURE_COOKIE=true
# [ ] MAIL_MAILER configuré (pas 'log')
# [ ] Base de données MySQL configurée
# [ ] php artisan config:cache
# [ ] php artisan route:cache
# [ ] php artisan view:cache
# [ ] php artisan storage:link
# [ ] Permissions fichiers (755 storage, 640 .env)
