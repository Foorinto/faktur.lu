APP_NAME="faktur.lu"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Pour la production, utilisez ces valeurs :
# APP_ENV=production
# APP_DEBUG=false
# APP_URL=https://faktur.lu

APP_LOCALE=fr
APP_FALLBACK_LOCALE=fr
APP_FAKER_LOCALE=fr_FR

# Default country for VAT rates, thresholds and legal mentions
# Supported: LU (Luxembourg), FR (France), BE (Belgium), DE (Germany)
BUSINESS_COUNTRY=LU

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Pour la production :
# LOG_STACK=daily
# LOG_LEVEL=warning

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Pour la production (sécurité sessions) :
# SESSION_ENCRYPT=true
# SESSION_SECURE_COOKIE=true
# SESSION_SAME_SITE=lax

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Configuration email - Brevo (ex-Sendinblue)
# Pour le développement local, utiliser 'log' pour voir les emails dans storage/logs
# Pour la production, utiliser 'smtp' avec les identifiants Brevo
MAIL_MAILER=smtp
MAIL_HOST=smtp-relay.brevo.com
MAIL_PORT=587
MAIL_USERNAME=your-brevo-email@example.com
MAIL_PASSWORD=your-brevo-smtp-key
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="info@faktur.lu"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Admin Panel Configuration
# Generate password hash with: php artisan tinker -> Hash::make('your-password')
# Generate 2FA secret with: php artisan tinker -> app(\PragmaRX\Google2FA\Google2FA::class)->generateSecretKey()
ADMIN_URL_PREFIX=secret-admin-change-me
ADMIN_USERNAME=admin@faktur.lu
ADMIN_PASSWORD_HASH=
ADMIN_2FA_SECRET=
ADMIN_SESSION_LIFETIME=30
ADMIN_MAX_LOGIN_ATTEMPTS=3
ADMIN_IP_BLOCK_DURATION=60

# Analytics - TWIPLA (privacy-friendly, GDPR compliant)
# Get your site ID from https://www.twipla.com after registration
# Leave empty to disable analytics
TWIPLA_SITE_ID=

# Stripe Configuration (Payments & Subscriptions)
# Get your keys from https://dashboard.stripe.com/apikeys
STRIPE_KEY=pk_test_xxx
STRIPE_SECRET=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
CASHIER_CURRENCY=eur
CASHIER_CURRENCY_LOCALE=fr_LU

# Stripe Price IDs (create products in Stripe Dashboard)
STRIPE_PRICE_PRO_MONTHLY=price_xxx
STRIPE_PRICE_PRO_YEARLY=price_xxx

# Peppol Access Point Configuration
# Enable Peppol network transmission (requires Access Point account)
PEPPOL_ENABLED=false
PEPPOL_PROVIDER=simulation

# Storecove Configuration (https://www.storecove.com/)
# Get your credentials from https://www.storecove.com/
STORECOVE_API_KEY=
STORECOVE_LEGAL_ENTITY_ID=
STORECOVE_SANDBOX=true
